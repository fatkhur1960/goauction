    "version": "0.2.0",
    "configurations": [
        {
            "envFile": "${workspaceFolder}/.env",
            "name": "Launch test function",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/tests",
            "args": [
                "-test.run",
                "TestPasswordHashing"
            ]
        },
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/goauction.go",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Launch Unit Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "cwd": "${workspaceFolder}/tests",
            "envFile": "${workspaceFolder}/.env",
            "args": ["test","-v","./tests","-p=1"],
            "program": "${workspaceFolder}/tests",  
        },
    ]
}